doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")
    title NNチャット
  body(class=currentBodyClass)
    div.my-3
    a(href="/logout").btn.btn-info.float-right ログアウト
    h1 NNチャット
  h2 新規投稿 
    form(method="post" action="/posts")
      div.form-group
        textarea(name="content" rows=4 class=currentTextClass)
        input(type="hidden" name="oneTimeToken" value=oneTimeToken)
      div.form-group
        button(type="submit").btn.btn-primary 送信
    a(href="/changeTheme").btn.btn-primary.mb-3 #{currentTheme==='light'?"ダークモード":"ライトモード"}へ切り替えの切り替え    

  each post in posts
    - let cardClass = (user === post.postedBy ? 'card my-3 bg-primary a-white' : (currentTheme === 'light' ? 'card my-3' : 'card my-3 bg-secondary text-white'))
      div(class=cardClass)
        div(class=`${cardClass}`)
          - let isDeletable = (user === post.postedBy || user === 'admin')
          if isDeletable
            div.card-header
              form(method="post" action="/posts/delete")
                input(type="hidden" name="id" value=post.id)
                input(type="hidden" name="oneTimeToken" value=oneTimeToken)
                button(type="submit").btn.btn-danger.float-right 削除
          div.card-body
          b #{post.postedBy}
          b #{post.id}
            small.float-right #{post.formattedCreatedAt}
            p.card-text!=post.content
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
    crossorigin="anonymous")